{
   "manifest_version": 2,
   "version": "2.5",
   "name": "HDrezka Helper",
   "description": "__MSG_extDesc__",
   "default_locale": "ru",
   "content_scripts": [{
      "matches": ["https://hdrezka.cm/*", "https://rezka.ag/*", "https://hdrezka.ag/*"],
      "js": ["script.js"],
      "run_at": "document_end"
   },
   {
      "matches": ["https://hdrezka.cm/favorites/*",
                  "https://rezka.ag/favorites/*",
                  "https://hdrezka.ag/favorites/*"],
      "js": ["favorites.js"],
      "run_at": "document_end"
   }
   ],
   "icons": {
      "128": "images/logo.png"
   },
   "permissions": [
      "storage"
   ],
   "options_ui": {
      "open_in_tab": false,
      "page": "menu/options.html"
   },
   "browser_action": {
      "default_popup": "menu/options.html"
   },
   "homepage_url": "https://github.com/SuperZombi/HDrezka-downloader",
   "minimum_chrome_version": "71.0.3578.80"
}
