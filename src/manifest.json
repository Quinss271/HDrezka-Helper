{
   "manifest_version": 2,
   "version": "2.2",
   "name": "HDrezka Downloader",
   "description": "Добавляет кнопку «Скачать» под видео.",
   "content_scripts": [{
      "matches": ["https://hdrezka.cm/*", "https://rezka.ag/*"],
      "js": ["script.js"],
      "run_at": "document_end"
   },
   {
      "matches": ["https://hdrezka.cm/favorites/*"],
      "js": ["favorites.js"],
      "run_at": "document_end"
   }
   ],
   "icons": {
      "128": "images/logo.png"
   },
   "permissions": [
      "storage"
   ],
   "options_ui": {
      "open_in_tab": false,
      "page": "options.html"
   },
   "browser_action": {
      "default_popup": "options.html"
   },
   "homepage_url": "https://github.com/SuperZombi/HDrezka-downloader",
   "minimum_chrome_version": "71.0.3578.80"
}
